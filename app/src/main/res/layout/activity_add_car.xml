<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formbg"
    android:fillViewport="true">

    <TextView
        android:id="@+id/allcarsback"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="1px"
        android:layout_marginTop="72px"
        android:background="@drawable/ic_baseline_keyboard_arrow_left_24" />

    <TextView
        android:layout_width="500px"
        android:layout_height="100px"
        android:layout_marginLeft="120px"
        android:layout_marginTop="85px"
        android:fontFamily="@font/poppins"
        android:text="Add New Car"
        android:textColor="#fff"
        android:textSize="50px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="320px"
        android:layout_gravity="center"
        android:padding="16dp">

        <EditText
            android:id="@+id/make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Car Brand"
            android:inputType="text" />

        <EditText
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Car Model"
            android:inputType="text" />

        <EditText
            android:id="@+id/condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Condition"
            android:inputType="text" />

        <EditText
            android:id="@+id/engine_cylinders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Engine Cylinders (v4, v6, etc)"
            android:inputType="text" />

        <EditText
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:inputType="number" />

        <EditText
            android:id="@+id/num_doors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Doors (2, 4, etc)"
            android:inputType="number" />

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color"
            android:inputType="text" />


        <Button
            android:id="@+id/select_image_button"
            android:layout_width="389dp"
            android:layout_height="93dp"
            android:layout_marginTop="50px"
            android:onClick="selectCarImage"
            android:text="Select Car Image"
            android:backgroundTint="#d2d1d1"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/add_car_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90px"
            android:backgroundTint="#21c81a"
            android:onClick="addCar"
            android:text="Add Car"
            android:textColor="#fff"/>

    </LinearLayout>

</RelativeLayout>

